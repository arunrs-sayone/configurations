{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "amd",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es6",
      "allowJs": false,
      "moduleResolution": "node",
      "strict": true,
      "alwaysStrict": true,
      "strictNullChecks": false,
      "downlevelIteration": true,
      "noEmit": false,
    },
    "include": [
      "./src/"
    ],
    "exclude": [
      "node_modules"
    ]
  }